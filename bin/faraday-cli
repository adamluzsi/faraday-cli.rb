#!/usr/bin/env ruby

if ENV['DEVELOPER_ENV'] == 'true'
  $LOAD_PATH.unshift(File.join(File.dirname(__FILE__),'..','lib'))
end

require 'faraday/cli'
require 'commander/import'

program :version, Faraday::CLI::VERSION
program :description, 'Ruby Faraday CLI'

global_option '--verbose' do
  $VERBOSE = true
end

